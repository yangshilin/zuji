<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#2EB8C2" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="时光轴"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="2016年02月10日" />

        <ImageView
            android:id="@+id/pull_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cltime"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:src="@drawable/pull_down" />

        <Button
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/time_past"
            android:text="过去"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#efefef" />

        <ImageView
            android:id="@+id/shijian_ischeck_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/shijian_ischeck_image" />

        <View
            android:id="@+id/centerview"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:background="#efefef" />

        <ListView
            android:id="@+id/time_listviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/shijian_ischeck_image"
            android:layout_marginTop="45dp" />
    </RelativeLayout>

</LinearLayout>