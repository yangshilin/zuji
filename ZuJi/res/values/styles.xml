<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base底部    Theme主题    Light 照亮 -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- <style name="myRadeoButton"> RadeoButton 布局调用名【@style/myRadioButton】 -->
    <style name="myRadioButton">
        <item name="android:layout_weight">1</item>
 <!-- 【内部设置】 权重为1 -->
        <item name="android:button">@null</item>
 <!-- button为空，去掉按钮默认的元件 -->
        <item name="android:drawablePadding">5dp</item>
 <!-- Button距离父控件的 内边距离 -->
        <item name="android:gravity">center</item>
 <!-- Button居中 -->
    </style>

    <style name="myView">
        <item name="android:layout_weight">2</item>
 <!-- 【内部设置】 权重为2 -->

    </style>

    <style name="textSize3">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textSize">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textSize2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dingbudaohangliang">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myschedule_current_month_tv">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>